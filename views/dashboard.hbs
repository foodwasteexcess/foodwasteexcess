{{#with user}}
<div class="user">
  <h1>Hello {{this.firstName}}!</h1>

  <img src="{{this.imgPath}}" alt="Your image" width="200px" height="150px">
</div>
{{/with}}

{{#each product}}

<h2>Your products to give away:</h2>
<p>Is everything still available?</p>

<!-- Product part to be updated -->

{{this.title}}
{{this.imgPath}}

<a href="/product/add">Add product</a>

<a href="/product/edit">Edit product</a>

<a href="/product/delete">Delete product</a>


{{#unless product}}

<h2> No product sitting in your fridge or your cupboard about to expire? </h2>
<p> Give your first excess and become part of the excess community!</p>

{{/unless}}

{{/each}}



